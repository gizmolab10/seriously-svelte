{
	"compilerOptions": {
		"strict": true,
		"target": "es6",
		"jsx": "preserve",
		"sourceMap": true,
		"outDir": "./dist",
		"module": "CommonJS",
		"esModuleInterop": true,
		"strictNullChecks": true,
		"moduleResolution": "node",
		"allowJs": true,
		"checkJs": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"typedocOptions": {
		"highlightLanguages": {
			"json": "javascript",
			"js": "javascript",
			"ts": "typescript",
			"svelte": "svelte",
			"html": "html",
			"css": "css"
		}
	},
	"exclude": [
		"node_modules",
		"bubble",
		"aside",
		"dist",
		"**/*.svelte"
	],
	"include": [
		"src/**/*",
		"src/lib/**/*",
		"src/main.js"
	]
}