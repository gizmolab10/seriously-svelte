{
	"compilerOptions": {
		"strict": true,
		"target": "es6",
		"jsx": "preserve",
		"sourceMap": true,
		"outDir": "./dist",
		"module": "ESNext",
		"esModuleInterop": true,
		"strictNullChecks": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"allowJs": true,
		"checkJs": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"types": ["svelte"]
	},
	"typedocOptions": {
		"highlightLanguages": {
			"json": "javascript",
			"js": "javascript",
			"ts": "typescript",
			"svelte": "svelte",
			"html": "html",
			"css": "css",
		},
	},
	"exclude": [
		"node_modules",
		"bubble",
		"aside",
		"dist"
	],
	"include": [
		"src/**/*",
		"src/main.js"
	]
}